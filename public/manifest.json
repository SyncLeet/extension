{
  "manifest_version": 3,

  "name": "LeetSync",
  "description": "Synchrnoize your LeetCode submissions to GitHub",
  "version": "1.0",

  "permissions": ["webRequest", "cookies", "storage", "identity"],
  "host_permissions": ["https://leetcode.com/*"],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["foreground.js"]
    }
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
